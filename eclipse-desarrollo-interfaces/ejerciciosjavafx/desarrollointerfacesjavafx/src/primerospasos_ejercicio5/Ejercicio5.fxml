<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="primerospasos_ejercicio5.SimpleController"
      style="-fx-background-color: #e6e6e6;">

    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10"
              style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-border-color: #000000; -fx-border-width: 2; -fx-alignment: center;">
            <children>
                <Button id="Boton1" mnemonicParsing="false"
                        onAction="#pulsame" text="Pulsa 1"
                        style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-size: 14;">
                </Button>
                <Button id="Boton2" mnemonicParsing="false"
                        onAction="#pulsame" text="Pulsa 2" textFill="#0de438"
                        style="-fx-background-color: #ff9800; -fx-text-fill: black; -fx-font-size: 18;">
                </Button>
                <Button id="Boton3" mnemonicParsing="false"
                        onAction="#pulsame" text="Pulsa 3"
                        style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14;">
                </Button>
                <Button id="Boton4" mnemonicParsing="false"
                        onAction="#pulsame" text="Pulsa 4"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14;">
                </Button>
            </children>
        </VBox>
    </children>
