<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" alignment="CENTER"
	xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="reto1_css.FormularioController">
	<Label text="Formulario de Registro" VBox.vgrow="NEVER" />
	<TextField promptText="Nombre" fx:id="nameField" />
	<TextField promptText="Email" fx:id="emailField" />
	<Label fx:id="statusLabel" text="Listo para enviar"
		styleClass="status-label" />
	<Button fx:id="submitButton" onAction="#handleSubmitAction"
		text="Enviar" styleClass="submit-button" />

</VBox>
