<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" prefHeight="286.0" prefWidth="360.0" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlesavanzado_ejercicio1.ControladorCalculadora">

    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="50.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" prefWidth="100.0" />
    </columnConstraints>
    
    <rowConstraints>
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
    </rowConstraints>

    <!-- Campo de texto para mostrar los números y resultados -->
    <TextField fx:id="campoTexto" prefHeight="26.0" prefWidth="201.0" GridPane.columnIndex="1" GridPane.columnSpan="4" />
    
    <!-- Botones numéricos y de operación -->
    <Button onAction="#presionarDigito" text="1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button onAction="#presionarDigito" text="2" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button onAction="#presionarDigito" text="3" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Button onAction="#presionarBorrar" text="C" GridPane.columnIndex="4" GridPane.rowIndex="1" />
    <Button onAction="#presionarDigito" text="4" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button onAction="#presionarDigito" text="5" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button onAction="#presionarDigito" text="6" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <Button onAction="#presionarOperacion" text="(%)" GridPane.columnIndex="4" GridPane.rowIndex="2" />
    <Button onAction="#presionarDigito" text="7" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button onAction="#presionarDigito" text="8" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button onAction="#presionarDigito" text="9" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <Button onAction="#presionarDigito" text="0" GridPane.columnIndex="4" GridPane.rowIndex="3" />
    <Button onAction="#presionarOperacion" text="+" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button onAction="#presionarOperacion" text="-" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button onAction="#presionarOperacion" text="*" GridPane.columnIndex="3" GridPane.rowIndex="4" />
    <Button onAction="#presionarOperacion" text="/" GridPane.columnIndex="4" GridPane.rowIndex="4" />
    <Button onAction="#presionarIgual" prefHeight="26.0" prefWidth="84.0" text="=" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="5" />
    
    
</GridPane>
